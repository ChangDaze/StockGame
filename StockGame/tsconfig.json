{
	"include": ["EasyStock/**/*", "vue-shims.d.ts"],
	"compilerOptions": {
		"strict": true,
		"target": "es5",
		"sourceMap": false,
		"module": "esnext",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipDefaultLibCheck": true,
		"types": ["node", "jQuery"],
		"typeRoots": ["node_modules/@types", "EasyStock/common/types"],
		"lib": ["es2016", "dom"],
		"outDir": "JsFiles",
		"baseUrl": ".",
		"paths": {
			"@/*": ["EasyStock/*"]
		}
	},
	"exclude": ["bin", "node_modules"]
}
