@using FirstTrade_.Models.Services


@model FirstTrade_.Models.Services.DDisplay

@{
    var jsonErrDev = Json.Encode(Model);
    var recordstates = ViewBag.recordstates;
    var recordlength = ViewBag.recordlength;
}

<div class="container d-flex flex-lg-row justify-content-lg-evenly flex-column justify-content-center mt-5 mb-4">

    @* 左區 *@
    <div class="d-flex flex-column justify-content-center align-items-center align-items-lg-start">
        <div id="lineChart"></div>

        <form method="post" action="Test1" class="mt-1 mb-lg-3 mb-5 d-flex flex-row flex-wrap align-items-center justify-content-center">
            <div class="me-3 d-flex flex-row align-items-center">
                <label class="me-2">選擇股票</label>
                <input type="text" name="Stock123" class="form-control" style="width: 150px"/>
            </div>
            <div class="me- mt-2 mt-sm-0 d-flex flex-row align-items-center"">
                <label class="me-2">選擇日期</label>
                <input type="date" name="Date123" class="form-control" style="width: 150px;"/><!--叫Date0時還不給binding...-->
            </div>
            <button type="submit" class="ft-btn rounded-circle ms-2">
                <i class="fas fa-sync"></i>
            </button>
        </form>
    </div>

    @* 右區 *@
    <div class="mt-lg-5">
        <form method="post" class="d-flex d-lg-inline-block justify-content-evenly flex-wrap playform">
            <div class="mb-3">
                <label class="me-1">編號</label>
                <input type="number" name="Cid" value=@ViewBag.Cid class="p-1 border rounded" readonly />
            </div>
            <div class="mb-3">
                <label class="me-1">資金</label>
                <input type="number" name="Cash" value=@ViewBag.Cash class="p-1 border rounded" readonly />
            </div>
            <div class="mb-3">
                <label class="me-1">部位</label>
                <input type="number" name="Position" value=@ViewBag.Position class="p-1 border rounded" readonly />
            </div>
            <div class="mb-3">
                <label class="me-1">損益</label>
                <input type="number" name="Profit" value=@ViewBag.Profit class="p-1 border rounded" readonly />
            </div>
            <div class="mb-3">
                <label class="me-1 wenk-length--small"  data-wenk="正數: 買入, 負數: 賣出，0: 不動" data-wenk-pos="top">數量</label>
                <input type="number" name="Status" class="p-1 border rounded" value=@ViewBag.Status />
            </div>
            <div class="mb-3">
                <label class="me-1">買入價</label>
                <input type="number" name="BuyCost" class="p-1 border rounded" value=@ViewBag.BuyCost readonly />
            </div>
            <div class="mb-3">
                <label class="me-1">幾天後</label>
                <input type="text" name="Name" class="p-1 border rounded">
            </div>
            <div class="mb-3">
                <label class="me-1">目前天數</label>
                <input type="text" name="Total" value="@ViewBag.Total" class="p-1 border rounded" readonly />
            </div>
            <div class="mb-3">
                <input type="text" name="StartDate" value="@ViewBag.StartDate" hidden />
            </div>
            <button type="submit" class="ft-btn submitBtn w-25 rounded">提交</button>
        </form>
    </div>
    <div id="stockInfo" class="circle ft-btn" data-wenk="介面功能教學" data-wenk-pos="left">
        <a>?</a>
    </div>
</div>

<div class="container pltable">
    <table class="table border">
        <thead class="ft-dark-text" style="background: var(--lightyellow)">
            <tr>
                <th scope="col">股票</th>
                <th scope="col">多空</th>
                <th scope="col">買價</th>
                <th scope="col">賣價</th>
                <th scope="col">部位</th>
                <th scope="col">損益</th>
                <th scope="col">日期</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                @* 股價 *@
                <td>
                    @if (recordlength <= 3)
                    {
                        foreach (var item in recordstates)
                        {
                            <p>@item.stocknumber</p>
                        }
                    }
                    else if (recordlength > 3)
                    {
                        for (var i = 0; i <= 2; i++)
                        {
                            <p>@recordstates[i].stocknumber</p>
                        }
                    }
                </td>
                @* 多空 *@
                <td>
                    @if (recordlength <= 3)
                    {
                        foreach (var item in recordstates)
                        {
                            <p>@item.direction</p>
                        }
                    }
                    else if (recordlength > 3)
                    {
                        for (var i = 0; i <= 2; i++)
                        {
                            <p>@recordstates[i].direction</p>
                        }
                    }
                </td>
                @* 買價 *@
                <td>
                    @if (recordlength <= 3)
                    {
                        foreach (var item in recordstates)
                        {
                            <p>@item.buycost</p>
                        }
                    }
                    else if (recordlength > 3)
                    {
                        for (var i = 0; i <= 2; i++)
                        {
                            <p>@recordstates[i].buycost</p>
                        }
                    }
                </td>
                @* 賣價 *@
                <td>
                    @if (recordlength <= 3)
                    {
                        foreach (var item in recordstates)
                        {
                            <p>@item.sellprice</p>
                        }
                    }
                    else if (recordlength > 3)
                    {
                        for (var i = 0; i <= 2; i++)
                        {
                            <p>@recordstates[i].sellprice</p>
                        }
                    }
                </td>
                @* 部位 *@
                <td>
                    @if (recordlength <= 3)
                    {
                        foreach (var item in recordstates)
                        {
                            <p>@item.position</p>
                        }
                    }
                    else if (recordlength > 3)
                    {
                        for (var i = 0; i <= 2; i++)
                        {
                            <p>@recordstates[i].position</p>
                        }
                    }
                </td>
                @* 損益 *@
                <td>
                    @if (recordlength <= 3)
                    {
                        foreach (var item in recordstates)
                        {
                            <p>@item.profit</p>
                        }
                    }
                    else if (recordlength > 3)
                    {
                        for (var i = 0; i <= 2; i++)
                        {
                            <p>@recordstates[i].profit</p>
                        }
                    }
                </td>
                @* 日期 *@
                <td>
                    @if (recordlength <= 3)
                    {
                        foreach (var item in recordstates)
                        {
                            <p>@item.date</p>
                        }
                    }
                    else if (recordlength > 3)
                    {
                        for (var i = 0; i <= 2; i++)
                        {
                            <p>@recordstates[i].date</p>
                        }
                    }
                </td>
            </tr>
        </tbody>
    </table>
</div>


<div class="layer">
    <h2 class="ft-light-text m-3">介面功能教學</h2>
    <div class="layerContent p-2">
        <div class="lineArea me-sm-5">
            <h3 class="mb-4" style="border-bottom: 2px solid var(--yellow)">線圖區</h3>
            <div class="lineItems"></div>
        </div>
        <div class="inputArea">
